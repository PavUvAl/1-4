<Window x:Class="_1_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1_4"
        mc:Ignorable="d"
        Title="Главное Меню" Height="110" Width="300" FontFamily="Century Gothic" FontSize="16" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu Background="#FFE3EDEF">
            <MenuItem x:Name="Personal" Header="Сотрудники" Click="Personal_OnClick" FontFamily="Century Gothic" FontSize="20" HorizontalAlignment="Center" Height="60" Width="130" Margin="10,0,0,0" Background="#FF8E9FFF" BorderBrush="#FFC4CCFD" Foreground="White"/>
            <MenuItem x:Name="Role" Header="Должности" Click="Role_OnClick" FontFamily="Century Gothic" FontSize="20" HorizontalAlignment="Left" Height="60" Width="130" Background="#FF8E9FFF" Foreground="White" BorderBrush="#FFC4CCFD"/>
        </Menu>
    </Grid>
</Window>
